<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="9"
        android:columnCount="2">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:text="Id:"/>

        <TextView
            android:id="@+id/id"
            android:layout_row="0"
            android:layout_column="1"/>

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:text="facebookId:"/>

        <TextView
            android:id="@+id/facebookId"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:text="joinDate:"/>

        <TextView
            android:id="@+id/joinDate"
            android:layout_row="2"
            android:layout_column="1"/>

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:text="fullName:"/>

        <TextView
            android:id="@+id/fullName"
            android:layout_row="3"
            android:layout_column="1"/>

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:text="postsDiscovered:"/>

        <TextView
            android:id="@+id/postsDiscovered"
            android:layout_row="4"
            android:layout_column="1"/>

        <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:text="postsCreated:"/>

        <TextView
            android:id="@+id/postsCreated"
            android:layout_row="5"
            android:layout_column="1"/>

        <TextView
            android:layout_row="6"
            android:layout_column="0"
            android:text="city:"/>

        <TextView
            android:id="@+id/city"
            android:layout_row="6"
            android:layout_column="1"/>

        <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:text="state:"/>

        <TextView
            android:id="@+id/state"
            android:layout_row="7"
            android:layout_column="1"/>

        <TextView
            android:layout_row="8"
            android:layout_column="0"
            android:text="country:"/>

        <TextView
            android:id="@+id/country"
            android:layout_row="8"
            android:layout_column="1"/>

    </GridLayout>

    <EditText
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:hint="Enter userId"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Call"/>

</LinearLayout>
